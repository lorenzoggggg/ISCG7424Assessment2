<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:radius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/quizNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:fontFamily="@font/runescape_uf"
            android:textSize="25dp"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/quizCatTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category: "
            android:fontFamily="@font/runescape_uf"
            android:textSize="25dp"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/quizDiffTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Difficulty: "
            android:fontFamily="@font/runescape_uf"
            android:textSize="25dp"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/startDTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Date: "
            android:fontFamily="@font/runescape_uf"
            android:textSize="25dp"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/endDTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Date: "
            android:fontFamily="@font/runescape_uf"
            android:textSize="25dp"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/likesTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Likes: "
            android:fontFamily="@font/runescape_uf"
            android:textSize="25dp"
            android:layout_margin="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/PlayBtn"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/runescape_uf"
                android:text="Play Quiz"
                android:textSize="25dp"
                android:layout_margin="5sp"/>

            <Button
                android:id="@+id/LikeBtn"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/runescape_uf"
                android:text="I like this one"
                android:textSize="25dp"
                android:layout_margin="5sp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>